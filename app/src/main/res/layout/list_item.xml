<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:background="@drawable/background_bubble_list"
    android:orientation="vertical">
    <TextView
        android:id="@+id/inventory_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        style="@style/itemText"
        />
    <TextView
        android:id="@+id/inventory_item_barcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/itemText"
        />
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/extra_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/inventory_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/itemText"
            />
        <TextView
            android:id="@+id/inventory_item_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/itemText"
            />
        <Button
            android:id="@+id/remove_item_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/remove"
            />
    </LinearLayout>

</LinearLayout>